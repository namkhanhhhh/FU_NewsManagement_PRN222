@model List<AS1_HE180034_PRN222.Models.NewsArticle>

@{
    ViewData["Title"] = "News Page";
    var UserID = Context.Session.GetString("UserID");
    var userRole = Context.Session.GetString("UserRole");

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    .dashboard-container {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 40px rgba(0,0,0,0.03);
    }

    .dashboard-header {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        margin: -2rem -2rem 2rem -2rem;
        padding: 2rem;
        border-radius: 20px 20px 0 0;
        position: relative;
    }

    .dashboard-title {
        color: white;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: 0.5px;
    }

    .search-container {
        background: white;
        border-radius: 15px;
        padding: 0.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        margin-bottom: 2rem;
    }

    .search-input {
        border: none;
        padding: 0.8rem 1.2rem;
        font-size: 1rem;
        width: 100%;
        border-radius: 10px;
    }

        .search-input:focus {
            outline: none;
            box-shadow: none;
        }

    .search-button {
        background: #4f46e5;
        border: none;
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .search-button:hover {
            background: #4338ca;
            transform: translateY(-1px);
        }

    .table-container {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .custom-table {
        margin-bottom: 0;
    }

        .custom-table thead {
            background: #1e293b;
        }

            .custom-table thead th {
                color: white;
                font-weight: 600;
                padding: 1.2rem 1rem;
                border: none;
            }

        .custom-table tbody tr {
            transition: all 0.3s ease;
        }

            .custom-table tbody tr:hover {
                background: #f1f5f9;
                transform: scale(1.01);
            }

        .custom-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #e2e8f0;
        }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.875rem;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .logout-btn {
        background: transparent;
        border: 2px solid rgba(255,255,255,0.5);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .logout-btn:hover {
            background: rgba(255,255,255,0.1);
            border-color: white;
            color: white;
        }

    .news-title {
        font-weight: 600;
        color: #1e293b;
    }

    .news-source {
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 500;
    }

    .date-cell {
        color: #64748b;
        font-size: 0.875rem;
    }
</style>

<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="dashboard-title">News Dashboard</h2>
                @if (!String.IsNullOrEmpty(UserID) || userRole == "Admin")
                {
                    <a asp-controller="Login" asp-action="Logout" class="logout-btn">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Login" class="logout-btn">
                        <i class="fas fa-sign-in-alt me-2"></i> Login
                    </a>
                }
            </div>
        </div>

        <div class="search-container">
            <div class="input-group">
                <input type="text" id="searchInput" class="search-input" placeholder="Search for news..." aria-label="Search">
                <button class="search-button" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <div class="table-container">
            <table class="table custom-table" id="newsTable">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Headline</th>
                        <th>Date Created</th>
                        <th>Source</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td class="news-title">@article.NewsTitle</td>
                            <td>@article.Headline</td>
                            <td class="date-cell">@article.CreatedDate?.ToString("dd/MM/yyyy")</td>
                            <td class="news-source">@article.NewsSource</td>
                            <td>
                                <a asp-controller="NewsArticle" asp-action="Details" asp-route-id="@article.NewsArticleId" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

@section Scripts {
        <script>
            document.getElementById("searchInput").addEventListener("keyup", function () {
                var keyword = this.value.toLowerCase();
                var rows = document.querySelectorAll("#newsTable tbody tr");

                rows.forEach(function (row) {
                    var text = row.innerText.toLowerCase();
                    row.style.display = text.includes(keyword) ? "" : "none";
                });
            });
        </script>
}
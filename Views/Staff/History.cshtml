@model IEnumerable<AS1_HE180034_PRN222.Models.NewsArticle>

@{
    ViewData["Title"] = "Lịch sử Bài Viết";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4895ef;
      --success-color: #4cc9f0;
      --danger-color: #f72585;
      --light-bg: #f8f9fa;
      --dark-text: #212529;
      --card-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }
    
    body {
      font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', sans-serif;
      background-color: #f3f4f6;
      color: var(--dark-text);
    }
    
    .page-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    
    .page-header {
      margin-bottom: 1.5rem;
      border-left: 5px solid var(--primary-color);
      padding-left: 1rem;
    }
    
    .page-title {
      font-weight: 700;
      color: var(--primary-color);
      margin: 0;
      font-size: 2rem;
    }
    
    .card {
      border-radius: 10px;
      border: none;
      box-shadow: var(--card-shadow);
      overflow: hidden;
    }
    
    .table-container {
      background: white;
      border-radius: 10px;
      box-shadow: var(--card-shadow);
      padding: 0.5rem;
      overflow-x: auto;
    }
    
    .custom-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }
    
    .custom-table th {
      background-color: var(--primary-color);
      color: white;
      padding: 1rem;
      text-align: left;
      font-weight: 600;
      position: sticky;
      top: 0;
    }
    
    .custom-table th:first-child {
      border-top-left-radius: 8px;
    }
    
    .custom-table th:last-child {
      border-top-right-radius: 8px;
    }
    
    .custom-table td {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid #e2e8f0;
    }
    
    .custom-table tr:hover {
      background-color: rgba(67, 97, 238, 0.05);
    }
    
    .custom-table tr:last-child td {
      border-bottom: none;
    }
    
    .status-badge {
      padding: 0.35rem 0.75rem;
      border-radius: 50px;
      font-size: 0.75rem;
      font-weight: 600;
      display: inline-block;
    }
    
    .status-active {
      background-color: rgba(76, 201, 240, 0.1);
      color: var(--success-color);
      border: 1px solid var(--success-color);
    }
    
    .status-hidden {
      background-color: rgba(247, 37, 133, 0.1);
      color: var(--danger-color);
      border: 1px solid var(--danger-color);
    }
    
    .btn-back {
      background-color: white;
      color: var(--primary-color);
      border: 1px solid var(--primary-color);
      border-radius: 50px;
      padding: 0.5rem 1.25rem;
      font-weight: 600;
      transition: all 0.2s ease;
    }
    
    .btn-back:hover {
      background-color: var(--primary-color);
      color: white;
      transform: translateY(-2px);
    }
    
    .btn-back i {
      margin-right: 0.5rem;
    }
    
    .empty-state {
      text-align: center;
      padding: 2rem;
      color: #718096;
      font-style: italic;
    }
      
      .custom-table {
        font-size: 0.9rem;
      }
      
      .custom-table th, 
      .custom-table td {
        padding: 0.5rem;
      }
    }
  </style>

  <div class="page-container">
    <div class="page-header">
      <h1 class="page-title">Article History</h1>
    </div>
    
    <div class="table-container">
      <table class="custom-table">
        <thead>
          <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Short Description</th>
            <th>Created Date</th>
            <th>Source</th>
            <th>Status</th>
            <th>Created By</th>
            <th>Updated Date</th>
          </tr>
        </thead>
        <tbody>
          @if (Model.Any())
          {
            int index = 1;
            foreach (var article in Model)
            {
              <tr>
                <td>@index</td>
                <td>@article.NewsTitle</td>
                <td>@article.Headline</td>
                <td>@article.CreatedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                <td>@article.NewsSource</td>
                <td>
                  <span class="status-badge @(article.NewsStatus == true ? "status-active" : "status-hidden")">
                                    @(article.NewsStatus == true ? "Published" : "Unpublished")
                  </span>
                </td>
                <td>@(article.CreatedBy?.AccountName ?? "Unknown")</td>
                <td>@article.ModifiedDate?.ToString("MM/dd/yyyy HH:mm")</td>
              </tr>
              index++;
            }
          }
          else
          {
            <tr>
              <td colspan="8" class="empty-state">No articles found.</td>
            </tr>
          }
        </tbody>
      </table>
    </div>
    
    <div class="mt-4">
      <a asp-action="StaffDashBoard" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back
      </a>
    </div>
  </div>
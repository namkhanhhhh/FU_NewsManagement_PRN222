@model List<AS1_HE180034_PRN222.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    var UserID = Context.Session.GetString("UserID");
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    .dashboard-container {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 40px rgba(0,0,0,0.03);
    }

    .dashboard-header {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        margin: -2rem -2rem 2rem -2rem;
        padding: 2rem;
        border-radius: 20px 20px 0 0;
        position: relative;
    }

    .dashboard-title {
        color: white;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: 0.5px;
    }

    .search-container {
        background: white;
        border-radius: 15px;
        padding: 0.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        margin-bottom: 2rem;
    }

    .search-input {
        border: none;
        padding: 0.8rem 1.2rem;
        font-size: 1rem;
        width: 100%;
        border-radius: 10px;
    }

        .search-input:focus {
            outline: none;
            box-shadow: none;
        }

    .search-button {
        background: #4f46e5;
        border: none;
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .search-button:hover {
            background: #4338ca;
            transform: translateY(-1px);
        }

    .table-container {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .custom-table {
        margin-bottom: 0;
    }

        .custom-table thead {
            background: #1e293b;
        }

            .custom-table thead th {
                color: white;
                font-weight: 600;
                padding: 1.2rem 1rem;
                border: none;
            }

        .custom-table tbody tr {
            transition: all 0.3s ease;
        }

            .custom-table tbody tr:hover {
                background: #f1f5f9;
                transform: scale(1.01);
            }

        .custom-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #e2e8f0;
        }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.875rem;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .logout-btn {
        background: transparent;
        border: 2px solid rgba(255,255,255,0.5);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .logout-btn:hover {
            background: rgba(255,255,255,0.1);
            border-color: white;
            color: white;
        }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-edit {
        background: #f59e0b;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background: #d97706;
            transform: translateY(-1px);
        }

    .btn-delete {
        background: #ef4444;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: #dc2626;
            transform: translateY(-1px);
        }
</style>

<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="dashboard-title">
                    <i class="fas fa-folder"></i> Category Management
                </h2>
                @if (!String.IsNullOrEmpty(UserID))
                {
                    <a asp-controller="Login" asp-action="Logout" class="logout-btn">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Login" class="logout-btn">
                        <i class="fas fa-sign-in-alt me-2"></i> Login
                    </a>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <a asp-action="StaffDashBoard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
            <a asp-action="AddCategory" class="btn btn-success">
                <i class="fas fa-plus"></i> Add Category
            </a>
        </div>

        <div class="search-container">
            <div class="input-group">
                <input type="text" id="searchBox" class="search-input" placeholder="Search for categories..." aria-label="Search">
                <button class="search-button" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <div class="table-container">
            <table class="table custom-table" id="categoryTable">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>@category.CategoryDesciption</td>
                            <td>
                                <span class="status-badge @(category.IsActive == true ? "status-active" : "status-inactive")">
                                    @(category.IsActive == true ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="DeleteCategory" asp-route-id="@category.CategoryId" method="post" onsubmit="return confirm('Are you sure you want to delete this category?')" class="d-inline">
                                        <button type="submit" class="btn btn-delete">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        document.getElementById("searchBox").addEventListener("input", function () {
            var keyword = this.value.toLowerCase();
            var rows = document.querySelectorAll("#categoryTable tbody tr");

            rows.forEach(function (row) {
                var text = row.innerText.toLowerCase();
                row.style.display = text.includes(keyword) ? "" : "none";
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            var successMessage = "@Html.Raw(TempData["SuccessMessage"])";
            if (successMessage) {
                Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: successMessage,
                    confirmButtonText: "OK"
                });
            }

            var errorMessage = "@Html.Raw(TempData["ErrorMessage"])";
            if (errorMessage) {
                Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: errorMessage,
                    confirmButtonText: "OK"
                });
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}